{
  "dxt_version": "0.2",
  "name": "@perplexity-ai/mcp-server",
  "version": "0.13.0",
  "description": "The official MCP Server for the Perplexity API",
  "author": {
    "name": "Perplexity",
    "email": "api@perplexity.ai"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perplexityai/perplexity-node.git"
  },
  "homepage": "https://github.com/perplexityai/perplexity-node/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.perplexity.ai/",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "PERPLEXITY_API_KEY": "${user_config.PERPLEXITY_API_KEY}"
      }
    }
  },
  "user_config": {
    "PERPLEXITY_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
